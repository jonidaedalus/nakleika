<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://advertiserBrowse.caption"
        focusComponent="advertisersTable"
        messagesPack="com.company.nakleika.web.screens.advertiser">
    <data readOnly="true">
        <collection id="advertisersDc"
                    class="com.company.nakleika.entity.advertiser.Advertiser">
            <view extends="advertiser-view"/>
            <loader id="advertisersDl">
                <query>
                    <![CDATA[select e from nakleika_Advertiser e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="advertisersTable"
            spacing="true">
        <filter id="filter"
                applyTo="advertisersTable"
                dataLoader="advertisersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="advertisersTable"
                    width="100%"
                    dataContainer="advertisersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="image"/>
                <column id="fullName"/>
                <column id="phoneNumber"/>
                <column id="city"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="advertisersTable.create"/>
                <button id="editBtn" action="advertisersTable.edit"/>
                <button id="removeBtn" action="advertisersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
