<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://advertiserEdit.caption"
        focusComponent="form"
        messagesPack="com.company.nakleika.web.screens.advertiser">
    <data>
        <instance id="advertiserDc"
                  class="com.company.nakleika.entity.advertiser.Advertiser">
            <view extends="advertiser-edit"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="advertiserDc">
            <column width="350px">
                <textField id="fullNameField" property="fullName"/>
                <textField id="phoneNumberField" property="phoneNumber"/>
                <lookupField id="cityField" property="city"/>
                <upload id="imageField" fileStoragePutMode="IMMEDIATE" property="image" showFileName="true"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
