<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://DCarModelBrowse.caption"
        focusComponent="dCarModelsTable"
        messagesPack="com.company.nakleika.web.screens.dcarmodel">
    <data readOnly="true">
        <collection id="dCarModelsDc"
                    class="com.company.nakleika.entity.dict.DCarModel">
            <view extends="dCarModel-view"/>
            <loader id="dCarModelsDl">
                <query>
                    <![CDATA[select e from nakleika_DCarModel e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dCarModelsTable"
            spacing="true">
        <filter id="filter"
                applyTo="dCarModelsTable"
                dataLoader="dCarModelsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="dCarModelsTable"
                    width="100%"
                    dataContainer="dCarModelsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="brand"/>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="dCarModelsTable.create"/>
                <button id="editBtn" action="dCarModelsTable.edit"/>
                <button id="removeBtn" action="dCarModelsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
